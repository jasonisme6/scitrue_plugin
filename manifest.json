{
  "name": "SciTrue",
  "description": "Floating claim-viewer for selected text. Keeps only double-click workflow on PDF pages.",
  "version": "1.9",
  "manifest_version": 3,

  "content_scripts": [
    {
      "matches": [
        "<all_urls>",
        "*://*/*.pdf",
        "file:///*.pdf"
      ],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],

  "permissions": []
}
